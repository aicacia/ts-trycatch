{
	"compilerOptions": {
		"importHelpers": true,
		"module": "commonjs",
		"outDir": "cjs",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "types",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"lib": [
			"esnext"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/**/*.test.*",
		"src/**/*.benchmark.*"
	],
	"typedocOptions": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"excludeExternals": true,
		"excludePrivate": true,
		"excludeInternal": true
	}
}